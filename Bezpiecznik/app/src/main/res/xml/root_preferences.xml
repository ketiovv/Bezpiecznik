<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="Pattern settings">

        <SeekBarPreference
            android:key="col_number"
            app:title="Number of columns"
            app:showSeekBarValue="true"
            app:defaultValue="3"
            app:min="1"
            android:max="10"/>

        <SeekBarPreference
            android:key="row_number"
            app:title="Number of rows"
            app:showSeekBarValue="true"
            app:defaultValue="3"
            app:min="1"
            android:max="10"/>

        <!-- TODO: Choose color of selected dots -->

        <!-- TODO: Choose color of line -->


        <SwitchPreference
            android:key="display_indicator"
            app:title="Display indicator"
            app:defaultValue="false"/>

        <SwitchPreference
            android:key="background"
            app:title="Fill dot background"
            app:defaultValue="false"/>

        <!-- TODO: Add nav button to AboutFragment -->

    </PreferenceCategory>

</PreferenceScreen>