<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="Pattern settings">
        <SeekBarPreference
            android:key="col_number"
            app:title="Number of columns"
            app:showSeekBarValue="true"
            app:defaultValue="3"/>
        <SeekBarPreference
            android:key="row_number"
            app:title="Number of rows"
            app:showSeekBarValue="true"
            app:defaultValue="3"/>
    </PreferenceCategory>

</PreferenceScreen>